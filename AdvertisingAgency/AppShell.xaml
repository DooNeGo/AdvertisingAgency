<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AdvertisingAgency.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AdvertisingAgency.Views"
    FlyoutBehavior="Disabled">

    <ShellContent ContentTemplate="{DataTemplate views:LoginView}" />
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems" Route="MainView">
        <ShellContent Title="Агенство" ContentTemplate="{DataTemplate views:AgencyInfoView}" />
        <ShellContent Title="Заявки" ContentTemplate="{DataTemplate views:RequestsView}" />
    </FlyoutItem>
</Shell>
