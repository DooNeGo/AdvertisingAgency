<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AdvertisingAgency.Views.CampaignEditView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviours="clr-namespace:AdvertisingAgency.Behaviours"
    xmlns:converters="clr-namespace:AdvertisingAgency.Converters"
    xmlns:core="clr-namespace:DevExpress.Maui.Core;assembly=DevExpress.Maui.Core"
    xmlns:domain="clr-namespace:AdvertisingAgency.Domain;assembly=AdvertisingAgency.Domain"
    xmlns:editors="clr-namespace:DevExpress.Maui.Editors;assembly=DevExpress.Maui.Editors"
    xmlns:viewModel="clr-namespace:AdvertisingAgency.ViewModels"
    Title="Изменение кампании"
    x:DataType="viewModel:CampaignEditViewModel">
    <ScrollView Padding="10">
        <VerticalStackLayout Spacing="10">
            <editors:ComboBoxEdit
                DisplayMember="Title"
                ItemsSource="{Binding CampaignGoals}"
                LabelText="Цель кампании"
                SelectedItem="{Binding Campaign.Goal}" />

            <editors:ComboBoxEdit
                ItemsSource="{Binding CampaignTypes}"
                LabelText="Тип кампании"
                SelectedItem="{Binding Campaign.Type}" />

            <editors:TextEdit LabelText="Название кампании" Text="{Binding Campaign.Name}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>